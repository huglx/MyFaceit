<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/play_regular</item>
    </style>

    <style name="TitleTextStyle">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/play_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Title2TextStyle">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:fontFamily">@font/play_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="BodyTextStyle">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/colorPrimaryWhite</item>
        <item name="android:fontFamily">@font/play_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="Head5TextStyle">
    <!-- Customize your theme here. -->
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/play_regular</item>
    <item name="android:textSize">24sp</item>
    <item name="android:letterSpacing">0</item>
    </style>

    <style name="Head6TextStyle">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/colorPrimaryWhite</item>
        <item name="android:fontFamily">@font/play_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="ContentLoadingProgress">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

</resources>